<Window x:Class="SUEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SUEditor"
        xmlns:vm="clr-namespace:SUEditor.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">


    <Grid>
        <!-- Menu bar -->
        <Menu Margin="0" Grid.ColumnSpan="2">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="OpenClick"/>
                <MenuItem Header="_Exit"/>
            </MenuItem>
        </Menu>
        <!-- Tab Control for the window -->
        <TabControl TabStripPlacement="Top" Margin="10,20,10,10" HorizontalAlignment="Stretch" Grid.ColumnSpan="2">
            <TabItem  Header="Unit Editor">
                <Grid>
                    <ComboBox Name="UnitBox" ItemsSource="{Binding NameList}" DisplayMemberPath="ViewName" HorizontalAlignment="Left" 
                              VerticalAlignment="Top" Width="180" IsReadOnly="True" SelectionChanged="UnitBox_SelectionChanged"/>
                    <TextBox Name="DisplayName" Text="{Binding UnitEditor.DispName, UpdateSourceTrigger=LostFocus, Mode=TwoWay}" HorizontalAlignment="Left" VerticalAlignment="Top" 
                             Width="180" Margin="0,27,0,0" Height="30" />
                    <Label x:Name="label" Content="{Binding UnitEditor.DispName}" HorizontalAlignment="Left" Height="38" Margin="10,62,0,0" VerticalAlignment="Top" Width="198"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
